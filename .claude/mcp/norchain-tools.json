  "description": "Comprehensive MCP server configuration for NorChain ecosystem development",
  "servers": {
    "norchain-blockchain": {
      "description": "Core blockchain interaction tools",
      "tools": [
        {
          "name": "nor_getBlockNumber",
          "description": "Get the current block number",
          "parameters": {
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
        {
          "name": "nor_getBlock",
          "description": "Get block by number or hash",
          "parameters": {
            "blockId": {
              "type": "string",
              "required": true,
              "description": "Block number or hash"
            },
            "fullTransactions": {
              "type": "boolean",
              "default": false
            },
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
        {
          "name": "nor_getBalance",
          "description": "Get NOR balance for an address",
          "parameters": {
            "address": {
              "type": "string",
              "required": true
            },
            "blockTag": {
              "type": "string",
              "default": "latest"
            },
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
        {
          "name": "nor_getTransaction",
          "description": "Get transaction details by hash",
          "parameters": {
            "hash": {
              "type": "string",
              "required": true
            },
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
        {
          "name": "nor_getTransactionReceipt",
          "description": "Get transaction receipt with logs",
          "parameters": {
            "hash": {
              "type": "string",
              "required": true
            },
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
        {
          "name": "nor_sendRawTransaction",
          "description": "Submit signed transaction to network",
          "parameters": {
            "signedTx": {
              "type": "string",
              "required": true
            },
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
        {
          "name": "nor_estimateGas",
          "description": "Estimate gas for transaction",
          "parameters": {
            "from": {
              "type": "string",
              "required": true
            },
            "to": {
              "type": "string",
              "required": true
            },
            "data": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
        {
          "name": "nor_gasPrice",
          "description": "Get current gas price",
          "parameters": {
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
        {
          "name": "nor_getCode",
          "description": "Get contract bytecode at address",
          "parameters": {
            "address": {
              "type": "string",
              "required": true
            },
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "devnet"],
              "default": "devnet"
            }
          }
        },
